---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: fluentd-elasticsearch
  namespace: {{ services.elasticsearch.namespace }}
  labels:
    app: fluentd-es

---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: fluentd-elasticsearch
  namespace: {{ services.elasticsearch.namespace }}
  labels:
    app: fluentd-es
subjects:
  - kind: ServiceAccount
    name: fluentd-elasticsearch
    namespace: {{ services.elasticsearch.namespace }}
roleRef:
  kind: ClusterRole
  name: cluster-admin
  apiGroup: rbac.authorization.k8s.io

ceph-deploy purge {proteus,jason,ares,castor,charon}
ceph-deploy purgedata {proteus,jason,ares,castor,charon}
ceph-deploy forgetkeys
rm ceph.*



ceph-deploy --username hydra new proteus
ceph-deploy --username hydra install {proteus,jason,ares,castor,charon}
ceph-deploy --username hydra mon create-initial
ceph-deploy --username hydra admin ares
ceph-deploy --username hydra admin proteus
ceph-deploy --username hydra admin jason
ceph-deploy --username hydra admin charon
ceph-deploy --username hydra admin castor


ceph-deploy purge {proteus,jason,ares,castor,charon}
  530  ceph-deploy purgedata {proteus,jason,ares,castor,charon}
  531  rm ceph.*
  532  ceph-deploy forgetkeys
  533  rm ceph.*
  534  ceph-deploy --username hydra new proteus
  535  ceph-deploy --username hydra install {proteus,jason,ares,castor,charon}
  536  ceph-deploy --username hydra mon create-initial
  537  ceph-deploy --username hydra admin ares
  538  ceph-deploy --username hydra admin proteus
  539  ceph-deploy --username hydra admin jason
  540  ceph-deploy --username hydra admin charon
  541  ceph-deploy --username hydra admin castor
  542  ceph-deploy osd create ares:sdb
  543  ceph-deploy osd create proteus:sdb
  544  ceph-deploy osd create charon:sdb
  545  ceph-deploy osd create castor:sdb
  546  ceph-deploy osd create jason:sdb
  547  ceph-deploy mon add ares
  548  ceph-deploy mon add castor
  549  ceph quorum_status --format json-pretty


then create pools
osd pool create hydra-ceph-pool 100
osd pool create hydra-ceph-metadata 100

create fs on pool
fs new hydra-ceph-fs hydra-ceph-pool hydra-ceph-metadata

ceph auth get-or-create client.nginx mon 'allow r' mds 'allow rw path=/nginx' osd 'allow rw pool=hydra-ceph-pool'

# AUTOMATICALLY GENERATED
# DO NOT EDIT THIS FILE DIRECTLY, USE /Dockerfile.template.erb

FROM alpine:3.7
LABEL maintainer "Nicola Arnoldi <nicola.arnoldi@gmail.com>"
LABEL Description="Fluentd docker image with filebeat support" Vendor="Fluent" Version="1.0"

ENV DUMB_INIT_VERSION=1.2.0

ENV SU_EXEC_VERSION=0.2

ARG DEBIAN_FRONTEND=noninteractive

# Do not split this into multiple RUN!
# Docker creates a layer for every RUN-Statement
# therefore an 'apk delete' has no effect
RUN apk update \
 && apk upgrade \
 && apk add --no-cache \
        ca-certificates \
        ruby ruby-irb \
        su-exec==${SU_EXEC_VERSION}-r0 \
        dumb-init==${DUMB_INIT_VERSION}-r0 \
 && apk add --no-cache --virtual .build-deps \
        build-base \
        ruby-dev wget gnupg \
 && update-ca-certificates \
 && echo 'gem: --no-document' >> /etc/gemrc \
 && gem install oj -v 2.18.3 \
 && gem install json -v 2.1.0 \
 && gem install fluentd -v 0.12.42 \
 && gem install fluent-plugin-beats \
 && gem install fluent-plugin-elasticsearch \
 && apk del .build-deps \
 && rm -rf /var/cache/apk/* \
 && rm -rf /tmp/* /var/tmp/* /usr/lib/ruby/gems/*/cache/*.gem

# for log storage (maybe shared with host)
RUN mkdir -p /var/log/fluentd/
# configuration/plugins path (default: copied from .)
RUN mkdir -p /etc/fluentd /etc/fluentd/plugins /etc/fluentd/config.d/

COPY entrypoint.sh /bin/
RUN chmod +x /bin/entrypoint.sh


ENV FLUENTD_OPT=""

ENV LD_PRELOAD=""
ENV DUMB_INIT_SETSID 0

# default syslog listener port
EXPOSE 5140
# default http listener port
EXPOSE 5141
# default http listener port (filebeats)
EXPOSE 5142
# monitor agent port
EXPOSE 24220
# default forwarder port
EXPOSE 24224
# default debug port
EXPOSE 24230


ENTRYPOINT ["/bin/entrypoint.sh"]

CMD ["fluentd", "-c", "/etc/fluentd/fluent.conf", "-p", "/etc/fluentd/plugins $FLUENTD_OPT"]
